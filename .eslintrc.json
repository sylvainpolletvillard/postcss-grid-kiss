{
	"env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [ "error", "tab", { "SwitchCase": 1 } ],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
	    "no-console": "off"
    },
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	}
}
